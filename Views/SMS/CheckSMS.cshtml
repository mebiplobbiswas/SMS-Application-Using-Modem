@model SMSApplication.Models.SMSViewModel

@{ ViewBag.Title = "CheckSMS"; }


@using (Html.BeginForm("SendSMS", "SMS", FormMethod.Post))
{
@Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="container-fluid">

                                    <div class="row">
                                        <div class="col-sm-12 col-xl-2"></div>
                                        <div class="col-sm-12 col-xl-8">
                                            <div class="card">
                                                <div class="card-header pb-0">
                                                    <h5><i data-feather="smartphone"></i> Send SMS <span>Using the <a href="#">Modem</a></span></h5>
                                                </div>
                                                <hr />
                                                <div class="card-body">
                                                    <div class="mb-3">
                                                        <label class="col-form-label pt-0" for="TelNo">Select Com Port</label>
                                                        @Html.DropDownList("Portmber", (IEnumerable<SelectListItem>)ViewBag.port, htmlAttributes: new { @class = "js-example-basic-single" })

                                                        @Html.ValidationMessageFor(model => model.Portmber, "", new { @class = "text-danger" })
                                                    </div>

                                                    <div class="mb-3">
                                                        <label class="col-form-label pt-0" for="TelNo">Mobile No.</label>
                                                        @Html.EditorFor(model => model.TelNo, new { htmlAttributes = new { @class = "form-control" } })

                                                        @Html.ValidationMessageFor(model => model.TelNo, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="col-form-label pt-0" for="Message">Message</label>
                                                        @Html.TextAreaFor(model => model.Message, 4, 10, new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                                    </div>


                                                </div>
                                                <div class="card-footer">
                                                    <button type="submit" class="btn btn-success">Send</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>}


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        $('.select2').select2();
        $(".js-example-theme-single").select2({
            theme: "classic"
        });


    </script>
}
