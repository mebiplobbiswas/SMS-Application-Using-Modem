<div id="form_body">

    <div class="card col-sm-8 offset-sm-2">

        <div style="border:1px solid #e0e0e0;border-radius:15px;">

            <div class="card-header text-light" style="border-radius:15px; font-size:20px;">
                <i style="color:black">Add New Role</i> <a class="pull-right" href="@Url.Action("Index","RolesAdmin")" style="color:black;"><i class="fa fa-list-ul"></i> Back To List</a>
            </div>
            <hr />

            <div class="card-body">
                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "" })
                                <div class="">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, new { @class = "" })
                                <div class="">
                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    

                    <hr />
                    <div class="form-group">
                        <div class="">
                            <input type="submit" class="btn btn-success" value="Save" />
                            @*<a class="btn btn-secondary"> Cancel</a>*@
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>






